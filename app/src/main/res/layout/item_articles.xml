<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/layParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:backgroundTint="@color/white"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/crdArticle"
            android:layout_width="108dp"
            android:layout_height="108dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
        <ImageView
            android:id="@+id/imgArticle"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:src="@drawable/splash"
            android:scaleType="centerCrop"
            />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txtAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/crdArticle"
            app:layout_constraintTop_toTopOf="@+id/crdArticle"
            android:layout_marginHorizontal="12dp"
            android:text="Ahamed"
            />
        <TextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/crdArticle"
            android:layout_marginHorizontal="6dp"
            android:text=""
            />

        <TextView
            android:id="@+id/txtArticleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/crdArticle"
            app:layout_constraintTop_toBottomOf="@+id/txtAuthorName"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:text="InfoMoney"
            />
        <TextView
            android:id="@+id/txtArticleDescription"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/crdArticle"
            app:layout_constraintTop_toBottomOf="@+id/txtArticleName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:maxLines="4"
            android:text="John Boyega Reflects on Star Wars Fandomâ€™s Problem With Black Heroes asdfghjkl;rtyhjkl;rftgyhujioretfyghjkilolfghjklfghjklfghjnkml,;fcgvhbjnkml,gfhbjnkmlfghjkwsedrftgyhufdghbjnk"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>